{
  "name": "keboola/google-sheets-writer",
  "license": "MIT",
  "type": "project",
  "description": "Keboola Google Sheets Writer",
  "keywords": ["keboola", "google", "sheets", "writer"],
  "authors": [
    {
      "name": "Miroslav Čillík",
      "email": "miro@keboola.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "keboola/csv": "^1.1",
    "pimple/pimple": "^3.0",
    "monolog/monolog": "^1.17",
    "symfony/config": "^4.0",
    "symfony/process": "^4.0",
    "keboola/php-temp": "^1.0",
    "keboola/google-sheets-client": "^1.3",
    "graylog2/gelf-php": "^1.5"
  },
  "require-dev": {
    "phpstan/phpstan-shim": "^0.9.2",
    "phpunit/phpunit": "^7.0",
    "slevomat/coding-standard": "4.4.6",
    "squizlabs/php_codesniffer": "~3.2"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\": ["src/Keboola/", "tests/Keboola/"]
    }
  },
  "scripts": {
    "tests": "phpunit",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "phpstan": "phpstan analyse ./src ./tests --level=0 --no-progress",
    "build": [
      "@phpstan",
      "@phpcs",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  }
}
